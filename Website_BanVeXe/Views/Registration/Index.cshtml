
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5" data-aos="fade-up" data-aos-delay="">
                <div class="block-heading-1">

                    <h2>ĐĂNG KÝ</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div style="background-color:white; width:50%; height:60%;margin:auto;">

                <div class=" p-1 p-md-5">
                    <form action="#" method="post">
                        <div class="form-group row">

                            <div class="col-md-12">
                                <input type="text" class="form-control" placeholder="Họ tên">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <input type="text" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input type="password" class="form-control" placeholder="Mật khẩu">
                            </div>
                            <div class="col-md-6">
                                <input type="password" class="form-control" placeholder="Nhắc lại mật khẩu">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input type="text" class="form-control" placeholder="Số điện thoại">
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Số CMND">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input type="text" class="form-control" placeholder="Tỉnh/Thành Phố">
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Quận/Huyện">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <input type="text" class="form-control" placeholder="Địa chỉ liên hệ">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12 ">
                                <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Đăng ký">
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>


    </div>
</div>




