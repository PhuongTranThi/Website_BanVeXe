
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Website_BanVeXe.Models.Model_DangKy
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5" data-aos="fade-up" data-aos-delay="">
                <div class="block-heading-1">

                    <h2>ĐĂNG KÝ</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div style="background-color:white; width:50%; height:50%;margin:auto;">

                <div class=" p-1 p-md-5">
                    <form action="/Registration/Create" method="post" id="form">
                        <div class="form-group row">

                            <div class="col-md-12">
                                <input name="hoten" id="hoten" type="text" class="form-control hoten" placeholder="Họ tên">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <input name="email" id="email" type="text" class="form-control email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input name="pass" id="pass" type="password" class="form-control pass" placeholder="Mật khẩu">
                            </div>
                            <div class="col-md-6">
                                <input name="pass2" id="pass2" type="password" class="form-control pass2" placeholder="Nhắc lại mật khẩu">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <input name="sdt" id="sdt" type="text" class="form-control sdt" placeholder="Số điện thoại">
                            </div>
                            <div class="col-md-6">
                                <input name="cmnd" id="cmnd" type="text" class="form-control cmnd" placeholder="Số CMND">
                            </div>
                        </div>
                       
                        <div class="form-group row">
                            <div class="col-md-12">
                                <input name="diachi" id="diachi" type="text" class="form-control diachi" placeholder="Địa chỉ liên hệ">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12 ">
                                <input name="submit" id="submit" type="submit" class="btn btn-block btn-primary text-white py-3 px-5 submit" value="Đăng ký">
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>


    </div>
</div>